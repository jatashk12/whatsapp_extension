  {
    "manifest_version": 3,
    "name": "BulkWhatsSender",
    "version": "1.3",
    "permissions": [
      "storage",
      "tabs",
      "scripting",
      "activeTab"
    ],
    "host_permissions": [
      "https://web.whatsapp.com/*"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": [
          "https://web.whatsapp.com/*"
        ],
        "js": [
          "content.js"
        ],
        "run_at": "document_start"
      }
    ],
    "action": {
      "default_popup": "index.html",
      "default_icon": {
        "16": "icons/icon1.png",
        "48": "icons/icon3.png",
        "128": "icons/icon3.png"
      }
    },
    "icons": {
      "16": "icons/icon1.png",
      "48": "icons/icon3.png",
      "128": "icons/icon3.png"
    },
    "web_accessible_resources": [
      {
        "resources": ["inject.js", "messenger.js"],
        "matches": ["https://web.whatsapp.com/*"]
      }
    ],
    "content_security_policy": {
      "extension_pages": "script-src 'self'; object-src 'self';"
    }
  }